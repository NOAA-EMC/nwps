module use /gpfs/hps/nco/ops/nwprod/modulefiles
module load prod_envir
module load prod_util
module unload grib_util
module load gcc/4.9.2
module load grib_util/1.1.1
module load PrgEnv-intel
module load iobuf
export IOBUF_PARAMS="*:count=4:size=32M:prefetch=1:preflush=1"

module load HDF5-serial-intel-haswell/1.8.9
module load NetCDF-intel-haswell/4.2
module load python/3.6.3
module load jasper-gnu-haswell/1.900.1
module load png-intel-haswell/1.2.49
module load zlib-intel-haswell/1.2.7
module load nco-gnu-haswell/4.4.4 
module load cfp-intel-sandybridge
module list

export FORT_BUFFERED=true
export NWPSplatform="DEVWCOSS"
export MP_PGMMODEL=mpmd
export MP_CSS_INTERRUPT=yes
export WFO="%WFO%"
export siteid=${WFO}
export SITEID=${WFO^^}
export N="1"
export KEEPDATA="YES"
export model="nwps"
export MODEL=${model^^}

export envir="para"

export DEVWCOSS_USER=$(whoami)
export COMROOT=/gpfs/hps3/ptmp/${DEVWCOSS_USER}/data/com

#Dev environment value for $job
export job=pnwps_${WFO}_fc_cg1
export jobid=pnwps_${WFO}_fc_cg1.$$

#Dev environment jlogfile
mkdir -p ${COMROOT}/logs/${envir}
export jlogfile=${COMROOT}/logs/${envir}/jlogfile.${job}

#Set platform
export WCOSS_SYSTEM=$( echo $COMROOTp1 | cut -c7 )d1
export WCOSS_SYSTEM_COM=$( echo $COMROOTp1 | cut -c7-9 )

export NWROOT=${NWPSdir}

VERSION_FILE=${NWROOT}/dev/nwps_test.ver
if [ -f $VERSION_FILE ]; then
  . $VERSION_FILE
else
  ECFNAME="jnwps_prep.ecf"
  echo "***JOB ${ECFNAME} ERROR: Version File $VERSION_FILE does not exist ***"
  exit
fi

# Wait for upstream component job to finish
while [ -z $(grep 'COMPLETED NORMALLY' ${COMROOT}/logs/${envir}/jlogfile.pnwps_%WFO%_prep | awk '{print $1}') ]
do
   if [ ! -z $(grep 'FAILED' ${COMROOT}/logs/${envir}/jlogfile.pnwps_%WFO%_prep | awk '{print $1}') ]
   then
       msg="FATAL ERROR: Upstream job pnwps_%WFO%_prep failed"
       postmsg "$jlogfile" "$msg"
       export err=1; err_chk
   fi
   echo 'Waiting for pnwps_%WFO%_prep to complete, at date'
   date
   sleep 60
done

${NWROOT}/dev/jobs/J${MODEL}_FORECAST

